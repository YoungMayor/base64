{
    "source": {
        "include": [
            "./src/"
        ],
        "includePattern": ".js$",
        "excludePattern": "^(node_modules/)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default": {
            "staticFiles": {
                "include": [
                    "./static",
                    "./dist/tmp",
                    "./readme.md"
                ]
            },
            "layoutFile": "./tmpl/layout.tmpl"
        }
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/"
    }
}